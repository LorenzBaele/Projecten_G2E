
@{
    ViewData["Title"] = "Sessie";
}


<div class="container">
    <br />
    <a role="button" class="btn btn-warning pull-right" asp-area="" asp-controller="Leerkracht" asp-action="Index">terug</a>


    @if (ViewBag.Sessie.IsActive)
    {
        <a role="button" class="btn btn-default pull-right">Start Sessie</a>

    }
    else
    {
        <a role="button" class="btn btn-default pull-right disabled">Start Sessie</a>
    }
    @if (ViewBag.Sessie.IsActive)
    {
        <a role="button" class="btn btn-default pull-right">Deactiveer Sessie</a>

    }
    else
    {
        <a role="button" class="btn btn-default pull-right">Activeer Sessie</a>
    }

    <h3>@ViewBag.Sessie.Name </h3>
    <p>Sessiecode: @ViewBag.Sessie.SessionCode</p>
    @{
        if (ViewBag.Sessie.IsActive)
        {
            <p>Actief</p>

        }
        else
        {
            <p>Niet actief</p>

        }
    }
</div>

<div class="container">
    <h3>Groepen </h3>

    <div class="list-group">
        @{

            if (ViewBag.Sessie.Box == null )
            {
                <p>Box is null;</p>

            }

            if (ViewBag.Sessie.Groups.Count > 0)
            {
                int i = 1;
                foreach (var group in ViewBag.Sessie.Groups)
                {
                    <a href="group${@i}" class="list-group-item">
                        <h4 class="list-group-item-heading">Group @i</h4>
                        <ul>
                            @{ foreach (var student in group)
                                {
                                    <li>@student</li>
                                }
                            }
                        </ul>
                    </a>

                    i++;
                }

            }
            else
            {
                <p>Er zijn nog geen groepen in de huidige sessie.</p>

            }
        }

    </div>
</div>


