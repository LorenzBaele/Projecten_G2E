
@{
    ViewData["Title"] = "Index";
}

<link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
@*@Url.Content("~/Content/Site.css")*@

<a asp-controller="Home" asp-action="Index" class="btn btn-info pull-right">
    <span class="glyphicon glyphicon-home"></span> Home
</a>
<br />
<div class="container">
    <div class="row">
        <section class="content">
            <h1 class="text-center">Alle Sessies</h1>
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form class="navbar-form">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search" name="sessionSearch">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                            <div class="pull-right">

                                <div class="btn-group">
                                    <a role="button" class="btn btn-success" asp-area="" asp-controller="Leerkracht" asp-action="Index" asp-route-id="2">Actief</a>
                                    <a role="button" class="btn btn-warning" asp-area="" asp-controller="Leerkracht" asp-action="Index" asp-route-id="3">Niet Actief</a>
                                    <a role="button" class="btn btn-default" asp-area="" asp-controller="Leerkracht" asp-action="Index" asp-route-id="1">Alles</a>
                                    @*<button type="button" class="btn btn-success ">Actief</button>
                                    <button type="button" class="btn btn-warning ">Niet Actief</button>
                                    <button type="button" class="btn btn-default ">alles</button>*@

                                </div>
                            </div>
                        </form>

                        <div class="table-container">
                            <table class="table">
                                <tbody>
                                    @foreach (var item in ViewBag.Sessies)
                                    {

                                        <tr>
                                            <td>
                                                <div class="media">
                                                    <a href="#" class="pull-left">
                                                        <img src="~/images/energy.png" class="media-photo">
                                                    </a>
                                                    <div class="media-body">
                                                        <span class="media-meta pull-right">@item.DayStarted.ToString("D")</span>
                                                        <h4 class="title">
                                                            @item.Name
                                                        </h4>


                                                        @if (item.IsActive)
                                                        {
                                                            <span class="pull-right" name="Actief">Actief</span>

                                                        }
                                                        else
                                                        {
                                                            <span class="pull-right" name="nActief">Niet Actief</span>

                                                        }




                                                        <p class="summary">@item.Desc</p>
                                                     
                                                        <a role="button" class="btn btn-default" asp-area="" asp-controller="Leerkracht" asp-action="Sessie" asp-route-id="@item.SessionCode">Open</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>

